include config.mk

alltarget = libnctplot.so
libraries = -lnctietue3 -lncurses -lSDL2 -ldl

ifdef have_shapelib
	CFLAGS += -DHAVE_SHPLIB
	libraries += -lshp -lm
	alltarget += ne_10m_coastline
endif
ifdef have_nctproj
	CFLAGS += -DHAVE_NCTPROJ
endif
ifdef have_proj
	CFLAGS += -DHAVE_PROJ
	libraries += -lproj
endif
ifdef have_png
	CFLAGS += -DHAVE_PNG
	libraries += -lpng
endif
ifdef have_wayland
	include xdg-shell.mk
endif

all: $(alltarget)

autogenerated:
	mkdir -p autogenerated

autogenerated/pager.h: config.mk makepager.sh Makefile | autogenerated
	./makepager.sh $(shrdir)/nctplot/bindings.h $(pager)

functions.c: make_functions.pl functions.in.c | autogenerated
	./$< -q

function_wrappers.c: functions.c

libnctplot.so: nctplot.o
	$(CC) -o $@ -shared $^ $(libraries)

nctplot.o: nctplot.c bindings.h nctplot.h functions.c config.mk coastlines.c png.c shpname.h autogenerated/pager.h
	$(CC) $(CFLAGS) -o $@ -c $<

shpname.h: Makefile config.mk
	printf "static const char* shpname = \"$(shrdir)/nctplot/ne_10m_coastline/ne_10m_coastline.shp\";\n" > $@

xdg-shell.mk:
	echo xdgshell = `find /usr/ -name xdg-shell.xml -print -quit 2>/dev/null` > $@

xdg-shell.h: $(xdgshell)
	wayland-scanner client-header $< $@

xdg-shell.c: $(xdgshell)
	wayland-scanner private-code $< $@

nctplot_wayland.o: nctplot_wayland.c xdg-shell.[ch] wayland/*
	$(CC) $(CFLAGS) -c $< -lwayland-client

wltest.out: nctplot_wayland.c xdg-shell.c xdg-shell.h wayland/* 
	$(CC) $(CFLAGS) -o $@ $< -Dwayland_test -lwayland-client -lxkbcommon

ne_10m_coastline:
	curl https://www.naturalearthdata.com/http//www.naturalearthdata.com/download/10m/physical/ne_10m_coastline.zip -OL
	mkdir ne_10m_coastline
	unzip -d ne_10m_coastline ne_10m_coastline.zip
	rm ne_10m_coastline.zip

clean:
	rm -rf *.o autogenerated functions.c function_wrappers.c libnctplot.so shpname.h xdg-shell.mk

install: $(alltarget)
	cp libnctplot.so $(libdir)
	cp nctplot.h $(includedir)
	mkdir -p $(shrdir)/nctplot
	cp bindings.h $(shrdir)/nctplot
ifdef have_shapelib
	cp -r ne_10m_coastline $(shrdir)/nctplot
endif

uninstall:
	rm -rf $(libdir)/libnctplot.so $(includedir)/nctplot.h $(shrdir)/nctplot
